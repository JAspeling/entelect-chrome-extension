{
    "name": "Entelect",
    "version": "0.0.0.18",
    "description": "General extensions for the entelect employee site",
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "options_page": "html/options.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "vendor/jquery-3.2.1.min.js",
                "vendor/toastr/toastr.min.js",
                "vendor/sweetalert/sweetalert2.all.min.js",
                "js/utils.js",
                "js/dismiss-notifications.js"
            ]
        }
    ],
    "page_action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "images/entelect_16.png",
            "32": "images/entelect_32.png",
            "48": "images/entelect_48.png",
            "128": "images/entelect_128.png"
        }
    },
    "icons": {
        "16": "images/entelect_16.png",
        "32": "images/entelect_32.png",
        "48": "images/entelect_48.png",
        "128": "images/entelect_128.png"
    },
    "manifest_version": 2,
    "author": "Johan Aspeling",
    "homepage_url": "https://github.com/JAspeling/entelect-chrome-extension"
}
