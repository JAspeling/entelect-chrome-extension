{
    "name": "Entelect",
    "version": "1.0",
    "description": "General extensions for the entelect employee site",
    "permissions": ["storage", "declarativeContent", "activeTab"],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "options_page": "html/options.html",
    "page_action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "images/entelect_16.png",
            "32": "images/entelect_32.png",
            "48": "images/entelect_48.png",
            "128": "images/entelect_128.png"
        }
    },
    "icons": {
        "16": "images/entelect_16.png",
        "32": "images/entelect_32.png",
        "48": "images/entelect_48.png",
        "128": "images/entelect_128.png"
    },
    "manifest_version": 2
}
